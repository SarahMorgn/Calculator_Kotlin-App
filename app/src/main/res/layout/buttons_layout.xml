<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="5">

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="="
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="4" />
        <Button
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="OFF"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="C"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/precent"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="%"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="รท"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/multi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="X"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="-"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/lavender"
            android:text="+"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="."
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />
        <Button
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:text="+/-"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:strokeColor="@color/lavender"
            app:strokeWidth="3dp" />

    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>